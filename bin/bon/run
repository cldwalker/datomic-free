#!/usr/bin/env bash

# check for $NODE_PATH and try to set it if missing
[[ -n "${NODE_PATH}" ]] || export NODE_PATH="$(dirname $(which npm))/../lib/node_modules"

if [[ ! -d $NODE_PATH ]]; then
  echo "Please set \$NODE_PATH - assumed ${NODE_PATH} does not exist."
  exit 1
fi

export BON_SCRIPT="bin/datomic-free"

source bon "$@"
