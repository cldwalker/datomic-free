#!/usr/bin/env bash

# NOTE: you should not run this, but instead the following command:
# npm i -g datomic-free

# installs bon globally, node & npm expected
npm i -g bon

# clones datomic-free if it doesn't already exist
if [[ ! -d ~/.datomic-free ]]; then
  git clone https://github.com/cldwalker/datomic-free.git ~/.datomic-free
fi
